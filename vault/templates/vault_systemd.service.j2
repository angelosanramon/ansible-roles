{% set new_options = [] %}
{% set options = vault_server_cmdline_options | reject('search','config') %}
{% for option in options %}
{% if option[0] == '-' %}
{% if new_options.append(option) %}{% endif %}
{% else %}
{% if new_options.append(option) %}{% endif %}
{% endif %}
{% endfor %}
[Unit]
Description="HashiCorp Vault - A tool for managing secrets"
Documentation=https://www.vaultproject.io/docs/
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty={{ vault_config_path }}/{{ vault_config_file }}
StartLimitIntervalSec=60
StartLimitBurst=3

[Service]
User={{ vault_user }}
Group={{ vault_group }}
ProtectSystem=full
ProtectHome=read-only
PrivateTmp=yes
PrivateDevices=yes
SecureBits=keep-caps
AmbientCapabilities=CAP_IPC_LOCK
Capabilities=CAP_IPC_LOCK+ep
CapabilityBoundingSet=CAP_SYSLOG CAP_IPC_LOCK
NoNewPrivileges=yes
ExecStart={{ vault_bin_path }}/vault server -config={{ vault_config_path }}/{{ vault_config_file }} \
    {{ new_options | join(' \\\n    ') }}
ExecReload=/bin/kill --signal HUP $MAINPID
KillMode=process
KillSignal=SIGINT
Restart=on-failure
RestartSec=5
TimeoutStopSec=30
StartLimitInterval=60
StartLimitIntervalSec=60
StartLimitBurst=3
LimitNOFILE=65536
LimitMEMLOCK=infinity
{% for env in vault_envs %}
Environment={{ env }}
{% endfor %}

[Install]
WantedBy=multi-user.target